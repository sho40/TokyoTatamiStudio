= render 'shared/products-header'
.products-content
  .products-content__main
    .products-content__main__items
      - @products.each do |p|
        .products-content__main__items__box
          = link_to product_path(p.id), class: 'image-wrap' do
            = image_tag(p.image.url, class: 'products-content__main__items__box__image')
          .products-content__main__items__box__name
            = p.name
          .products-content__main__items__box__price
            = "Â¥#{number_with_delimiter p.price}"
= render 'shared/footer'




  
